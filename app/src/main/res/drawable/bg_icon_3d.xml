<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20000000" />
            <size android:width="56dp" android:height="56dp" />
        </shape>
    </item>
    
    <!-- Main circle -->
    <item
        android:bottom="4dp"
        android:right="4dp"
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#30FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item
        android:bottom="6dp"
        android:right="6dp"
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>
</layer-list>
